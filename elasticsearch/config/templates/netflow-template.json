{
	"template": "netflow*",
	"mappings": {
		"fluentd": {
			"properties": {
				"@timestamp": {
					"type": "date",
					"format": "dateOptionalTime"
				},
				"host": {
					"type": "ip"
				},
				"ipv4_dst_addr": {
					"type": "ip"
				},
				"ipv4_next_hop": {
					"type": "ip"
				},
				"ipv4_src_addr": {
					"type": "ip"
				},
				"dst_addr_latitude": {
					"type": "double"
				},
				"dst_addr_longitude": {
					"type": "double"
				},
				"src_addr_latitude": {
					"type": "double"
				},
				"src_addr_longitude": {
					"type": "double"
				},
				"dst_location": {
					"type": "geo_point"
				},
				"src_location": {
					"type": "geo_point"
				}
			}
		}
	}
}
